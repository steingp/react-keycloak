{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@auth-ws/auth-keycloak": ["./libs/auth-keycloak/src/index.ts"],
      "@auth-demo": ["apps/auth-demo/src/index.ts"]
    }
  }
}
