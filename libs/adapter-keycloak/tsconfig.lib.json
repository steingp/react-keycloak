{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "composite": true,
    "outDir": "../../dist/out-tsc",
    "types": ["vitest/globals", "node"],
    "lib": ["ES2022","DOM"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": [
    "src/**/*.spec.ts", "src/**/*.test.ts",
    "src/**/*.spec.tsx", "src/**/*.test.tsx"
  ]
}
